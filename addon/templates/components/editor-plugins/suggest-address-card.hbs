<div class="modal-dialog__header">
  <div class="grid">
    <div class="col--10-12">
      <p>
        <strong>Adres invoegen</strong>
      </p>
    </div>
    <div class="col--2-12 u-align-right">
      <a class="link--icon--close" href="#" {{action 'closeHints'}}>
        <span class="u-visually-hidden">Venster sluiten</span>
      </a>
    </div>
  </div>
</div>
<div class="modal-dialog__content modal-dialog__content--sectioned">
  <div>
    <Input @value={{searchText}} @key-up={{perform search}} @placeholder="Adres" />
  </div>

  {{#if search.isRunning}}
    <div>Aan het zoeken...</div>
  {{else if search.lastSuccessful}}
    {{#each search.lastSuccessful.value as |suggestion|}}
      <div>
        {{suggestion.fullAddress}}
        <WuButton @label="Invoegen" @onClick={{perform insertAddress suggestion}} @size="small" @isNarrow="true" @isLink="true" />
      </div>
    {{/each}}
  {{/if}}

  <div>
    <WuButton @label="Uitgebreid zoeken" @onClick={{action "openAdvancedSearch"}} @size="small" />
  </div>
</div>
